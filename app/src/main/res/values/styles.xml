<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="taleNameStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/taleNameTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/taleNameShadowColor</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
    </style>
    <style name="taleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/taleTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="btnListItem">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/btnNameTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
